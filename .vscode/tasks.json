{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copy compile_commands.json",
            "type": "shell",
            "command": "cp builddir/compile_commands.json ${workspaceFolder}",
            "problemMatcher": []
        },
        {
            "label": "build C++ Project",
            "type": "shell",
            "command": "meson compile",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/builddir"
            }
        },
        {
            "label": "build C# native library",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                // shared library
                "/p:NativeLib=Shared",
                // self contained
                "/p:SelfContained=true",
                // runtime [win-x64, linux-x64, osx-x64]
                // "-r ${runtime}",
                // release
                //"-c release"
            ],
            // set working directory
            "options": {
                "cwd": "${workspaceRoot}/dotnet-native-lib"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "windows": {
                "args": [
                    "publish",
                    // shared library
                    "/p:NativeLib=Shared",
                    // self contained
                    "/p:SelfContained=true",
                    // runtime [win-x64, linux-x64, osx-x64]
                    "-r",
                    "win-x64",
                    "--self-contained",
                    // release
                    //"-c release"
                ],
            },
            "linux": {
                "args": [
                    "publish",
                    // shared library
                    "/p:NativeLib=Shared",
                    // self contained
                    "/p:SelfContained=true",
                    // runtime [win-x64, linux-x64, osx-x64]
                    "-r",
                    "linux-x64",
                    "--self-contained",
                    // release
                    //"-c release"
                ],
            }
        },
        {
            "label": "build C# project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "csharp-cross-platform.csproj",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            // set workign directory
            "options": {
                "cwd": "${workspaceRoot}/csharp"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "windows":{
                "args": [
                    "build",
                    "csharp.csproj",
                    // Ask dotnet build to generate full paths for file names.
                    "/property:GenerateFullPaths=true",
                    // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                    "/consoleloggerparameters:NoSummary"
                ],
            }
        }
    ]
}